generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Categoria {
  id    Int     @id @default(autoincrement())
  nome  String
  itens Item[]
}

model Item {
  id          Int     @id @default(autoincrement())
  nome        String
  descricao   String?
  preco       Float
  disponivel  Boolean      @default(true) 
  pedidosItem PedidoItem[]
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int
}

model Pedido {
  id           Int          @id @default(autoincrement())
  nomeCliente  String
  telefone     String
  endereco     String
  observacoes  String?
  itens        PedidoItem[]
  criadoEm     DateTime      @default(now())
  status       Int           @default(1)
  metodoPagamento String?
  trocoPara       Float?
}

model PedidoItem {
  id       Int    @id @default(autoincrement())
  pedido   Pedido @relation(fields: [pedidoId], references: [id])
  pedidoId Int
  item     Item   @relation(fields: [itemId], references: [id])
  itemId   Int
  quantidade Int
}

model Horarios {
  diaDaSemana Int     @id
  nome        String
  aberto      Boolean
  inicio      String
  fim         String
}